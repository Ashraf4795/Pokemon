<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pokemon_card_id"
    android:layout_width="200dp"
    android:layout_height="150dp"
    android:layout_margin="@dimen/default_margin"
    android:backgroundTint="@color/green_opacity"
    app:cardCornerRadius="@dimen/default_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/pokemon_item_iv_description"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/pokemon_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/titillium_web_bold"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            tools:text="Balbasur" />

        <TextView
            android:id="@+id/pokemon_type_1"
            style="@style/type_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chips_drawable"
            android:textColor="@color/white"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/pokemon_name_id"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_name_id"
            tools:text="Balbasur" />

        <TextView
            android:id="@+id/pokemon_type_2"
            style="@style/type_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chips_drawable"
            android:textColor="@color/white"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/pokemon_type_1"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_type_1"
            tools:text="Balbasur" />

        <TextView
            android:id="@+id/pokemon_type_3"
            style="@style/type_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chips_drawable"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/pokemon_type_2"
            app:layout_constraintTop_toBottomOf="@+id/pokemon_type_2"
            tools:text="Balbasur" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>